<script type="text/javascript">
    $(function () {
        var $txtGoogle = $("#txtGoogle"), $txtBaidu = $("#txtBaidu");
        $txtGoogle.on("keyup", function () {
            $txtBaidu.val($.trim(this.value))
        });
        $txtBaidu.on("keyup", function () {
            $txtGoogle.val($.trim(this.value));
        });
