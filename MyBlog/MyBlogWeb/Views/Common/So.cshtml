@{
    Layout = "~/Views/Layout/Main.cshtml";
}

<style type="text/css">
    .inputbox {
        height: 60px;
        font-size: 25px;
    }

    .searchBtn {
        height: 60px;
        width: 150px;
        font-size: 20px;
        font-weight: bolder;
        word-spacing: 2px;
        letter-spacing: 2px;
    }

    form {
        margin-top: 170px;
    }

        form .label {
            color: #fff !important;
        }

            form .label:hover {
                color: #ddd !important;
            }

    .divLinks {
        font-size: 18px;
        word-spacing: 5px;
        letter-spacing: 5px;
        color: #888;
    }

        .divLinks .panel-body {
            display: none;
        }
</style>

<form id="form1" name="form1" class="form-horizontal" role="form" method="get" action="http://www.google.com/search" target="_blank">
    <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <a href="http://news.google.com/" class="label label-success" target="_blank">新闻</a>
            <a href="http://music.google.com/" class="label label-success" target="_blank">音乐</a>
            <a href="http://images.google.com/" class="label label-success" target="_blank">图片</a>
            <a href="http://video.google.com/" class="label label-success" target="_blank">视频</a>
            <a href="http://maps.google.com/" class="label label-success" target="_blank">地图</a>
        </div>
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input type="text" class="form-control inputbox" id="txtGoogle" name="q" baiduSug="1" placeholder="谷歌搜索" />
        </div>
        <div class="col-md-3">
            <button type="button" class="btn btn-success searchBtn" id="btnGoogleSearch"><span class="glyphicon glyphicon-search"></span>谷歌搜索</button>
        </div>
    </div>
</form>

